<body>
  <div class="card" role="group" aria-label="Cuenta atrás">
    <div class="title" id="name">Días para el examen Aux. Admin.</div>
    <div class="digits" id="display">--:--:--:--</div>
    <div class="units" aria-hidden="true">
      <span>DÍAS</span>&nbsp;&nbsp;<span>HORAS</span>&nbsp;&nbsp;<span>MIN</span>&nbsp;&nbsp;<span>SEG</span>
    </div>
  </div>

  <script>
    // Objetivo: 22/04/2026 10:00 (hora LOCAL del dispositivo)
    // Si quieres fijarlo a una zona horaria concreta, dímelo y lo adapto.
    const TARGET = new Date(2026, 3, 22, 10, 0, 0); // (mes 3 = abril)

    const pad2 = n => String(n).padStart(2, "0");

    function tick(){
      const now = new Date();
      let diff = TARGET.getTime() - now.getTime();
      if (diff < 0) diff = 0;

      const totalSeconds = Math.floor(diff / 1000);
      const days = Math.floor(totalSeconds / 86400);
      const hours = Math.floor((totalSeconds % 86400) / 3600);
      const minutes = Math.floor((totalSeconds % 3600) / 60);
      const seconds = totalSeconds % 60;

      // Formato estilo “digital”: DÍAS:HH:MM:SS
      const text = `${days}:${pad2(hours)}:${pad2(minutes)}:${pad2(seconds)}`;
      document.getElementById("display").textContent = text;

      // Cuando llegue, deja 0 y no hace falta más.
      if (diff === 0) return;
      requestAnimationFrame(() => {}); // noop (evita warnings en algunos embeds)
    }

    tick();
    setInterval(tick, 1000);
  </script>
